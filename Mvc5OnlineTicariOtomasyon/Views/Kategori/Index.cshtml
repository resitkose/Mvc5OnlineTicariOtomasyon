@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@*@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>*@
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/style/style.css" rel="stylesheet" />
</head>
<body>
    <table class="table table-bordered" style="margin-top:20px">
        <tr>
            <td>ID</td>
            <td>Kategori Adı</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>
                    @x.KategoryId
                </td>
                <td>
                    @x.KategoriAd
                </td>
                <td>
                    <a href="/Kategori/KategoriSil/@x.KategoryId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Kategori/KategoriGuncelle/@x.KategoryId" class="btn btn-success button">Güncelle</a>
                </td>
            </tr>
        }

    </table>
    @*@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }), new PagedListRenderOptions
    { LiElementClasses = new List<string> { "page-link" } })*@
    <a href="/Kategori/KategoriEkle" class="button"><span>Kategori Ekle</span></a>
</body>

