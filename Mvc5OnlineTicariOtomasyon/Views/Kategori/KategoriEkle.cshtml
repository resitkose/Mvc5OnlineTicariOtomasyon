@model Mvc5OnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/style/style.css" rel="stylesheet" />
</head>
<body>
    <br />
    <h2>KategoriEkle</h2>
    <br />
    <form class="form-group" method="post">
        @Html.LabelFor(x => x.KategoriAd)
        <br />
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KategoriAd, "", new { @style = "color:red" })
        <br />
        <button class="button"><span>Kaydet</span></button>
    </form>
</body>
