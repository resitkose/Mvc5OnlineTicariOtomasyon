@model Mvc5OnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/style/style.css" rel="stylesheet" />
</head>
<body>
    <br />
    <h2>Kategori Guncelle</h2>
    <br />
    @using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(x => x.KategoryId)
            @Html.LabelFor(x => x.KategoriAd)
            @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.KategoriAd, "", new { @style = "color:red" })
        </div>
        <button class="btn btn-warning"><span>Güncelle</span></button>

    }
</body>
