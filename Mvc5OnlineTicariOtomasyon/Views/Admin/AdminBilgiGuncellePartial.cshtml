@model Mvc5OnlineTicariOtomasyon.Models.Siniflar.Admin
@using (Html.BeginForm("AdminBilgiGuncelle2", "Admin", FormMethod.Post))
{
    <form class="form-horizontal">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.KullaniciAd, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
            </div>
        </div>
        <div>
            <h2 style="color:red">UYARI</h2>
            <p>Şifrenizi değiştirmeyi onayladığınız takdirde sistem tarafından otomatik olarak giriş sayfasına yönlendirileceksiniz.</p>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </div>
    </form>
}

