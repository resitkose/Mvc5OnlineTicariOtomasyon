@model IEnumerable<Mvc5OnlineTicariOtomasyon.Models.Siniflar.GrupSinif2cs>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int no = 0;}
                @foreach (var d in Model)
                {
                    no++;

                    <tr>
                        <td>@no</td>
                        <td>@d.Departman</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 50%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@d.Sayi</span></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
