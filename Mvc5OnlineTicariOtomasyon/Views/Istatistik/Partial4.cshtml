@model IEnumerable<Mvc5OnlineTicariOtomasyon.Models.Siniflar.GrupSinif3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalar Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{int no = 0;}
                @foreach (var item in Model)
                {
                    no++;
                    <tr>
                        <td>@no</td>
                        <td>@item.Marka</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@item.Sayi</span></td>
                    </tr>
                }
