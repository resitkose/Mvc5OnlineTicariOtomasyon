
@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Themes/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Themes/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <!-- Profile Image -->
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="~/Themes/AdminLTE-3.0.4/dist/img/user.png"
                                         alt="User profile picture">
                                </div>
                                <h3 class="profile-username text-center">@Model.degerler.CariAd @Model.degerler.CariSoyad</h3>
                                <p class="text-muted text-center">@Model.degerler.CariMail</p>
                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Toplam Alış Sayısı</b> <a class="float-right">@ViewBag.toplamAlis</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Toplam Maliyet Tutarı</b> <a class="float-right">@ViewBag.toplamSatisTutari ₺</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Alınan Toplam Ürün Sayısı</b> <a class="float-right">@ViewBag.toplamUrunSayisi</a>
                                    </li>
                                </ul>
                                <a href="/CariPanel/KargoTakip" class="btn btn-primary btn-block"><b>KargoTakip</b></a>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- About Me Box -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">
                                    Hakkımda
                                </h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <strong><i class="fas fa-book mr-1"></i> Meslek</strong>
                                <p class="text-muted">
                                    Kişinin Mesleği Yazılacak
                                </p>
                                <hr>
                                <strong><i class="fas fa-map-marker-alt mr-1"></i> Şehir</strong>
                                <p class="text-muted">@Model.degerler.CariSehir</p>
                                <hr>
                                <strong><i class="fas fa-pencil-alt mr-1"></i> Telefon No</strong>
                                <p class="text-muted">(+90) ___ ___ __ __</p>
                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Notlar</strong>
                                <p class="text-muted">Kişi Buraya Not Yazabilir.</p>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Mesajlar</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Duyurular</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Hesap</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <!-- Post -->
                                        @foreach (Mesajlar m in Model.mesajlar)
                                        {
                                            <div class="post">
                                                <div class="user-block">
                                                    <img class="img-circle img-bordered-sm" src="~/Themes/AdminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">
                                                    <span class="username">
                                                        <a href="#">@m.Gonderen</a>
                                                        <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                                    </span>
                                                    <span class="description">@m.Tarih Tarihinde Gönderildi</span>
                                                </div>
                                                <!-- /.user-block -->
                                                <p>
                                                    @m.MesajIcerik
                                                </p>
                                                <p>
                                                    <a href="#" class="link-black text-sm mr-2"><i class="fas fa-share mr-1"></i> İlet</a>
                                                    <a href="#" class="link-black text-sm"><i class="far fa-thumbs-up mr-1"></i> Okundu Olarak İşaretle</a>
                                                </p>
                                            </div>
                                        }

                                    </div>

                                    @Html.Action("DuyuruPartial", "CariPanel")
                                    <div class="tab-pane" id="settings">

                                        @Html.Action("BilgiGuncelle", "CariPanel")
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>


    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Themes/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Themes/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Themes/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Themes/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>


