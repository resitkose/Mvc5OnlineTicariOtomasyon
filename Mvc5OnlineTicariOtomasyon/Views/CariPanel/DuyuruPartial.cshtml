@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@model List<Mesajlar>
<div class="tab-pane" id="timeline">
    <div class="timeline timeline-inverse">
        @foreach (var m in Model)
        {
            <div class="time-label">
                <span class="bg-danger">
                    @m.Tarih
                </span>
            </div>
            <div>
                <i class="fas fa-envelope bg-primary"></i>
                <div class="timeline-item">
                    <span class="time"><i class="far fa-clock"></i> @m.Tarih.TimeOfDay</span>
                    <h3 class="timeline-header"><a href="#">@m.Gonderen</a> Tarafından Gönderildi</h3>
                    <div class="timeline-body">
                        @m.MesajIcerik
                    </div>
                    <div class="timeline-footer">
                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                    </div>
                </div>
            </div>
        }
        <div>
            <i class="far fa-clock bg-gray"></i>
        </div>
    </div>
</div>

